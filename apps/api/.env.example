# Configuration de la Base de Données PostgreSQL
# Format: postgresql://username:password@host:port/database
# Exemple Railway: postgresql://postgres:password@containers-us-west-xxx.railway.app:5432/railway
DATABASE_URL="postgresql://user:password@localhost:5432/gestion_apparts"

# Port de l'application (Railway utilise automatiquement la variable PORT)
PORT=4000

# Configuration JWT pour l'authentification
JWT_SECRET="votre_secret_jwt_tres_securise_changez_moi"
JWT_EXPIRES_IN="7d"

# Configuration Email (Nodemailer)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER="votre_email@gmail.com"
EMAIL_PASSWORD="votre_mot_de_passe_application"
EMAIL_FROM="noreply@gestion-apparts.com"

# Configuration PawaPay (Paiements mobiles)
PAWAPAY_API_KEY="votre_cle_api_pawapay"
PAWAPAY_API_URL="https://api.pawapay.cloud"

# URL du Frontend (pour CORS et emails)
FRONTEND_URL="http://localhost:3000"

# Nom du projet Vercel (pour la sécurité CORS)
# Utilisez le nom exact de votre projet Vercel (visible dans l'URL)
VERCEL_PROJECT_NAME="gestion-apparts"

# Environnement (development, production, test)
NODE_ENV="development"

# Limite de téléchargement (optionnel)
MAX_FILE_SIZE="100mb"
